<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBack"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/restaurants_button"
                        android:layout_width="160sp"
                        android:layout_height="200sp"
                        android:layout_margin="5sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70sp"
                                android:layout_height="70sp"
                                android:background="@drawable/circle_background_pink"
                                android:padding="10dp"
                                android:src="@drawable/ic_restaurant_menu_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:gravity="center"
                                android:text="Restaurants"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_margin="10sp"
                                android:background="@color/lightGrayLine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:gravity="center"
                                android:text="Check out most popular restaurants"
                                android:textColor="@color/lighterBlack"


                                />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="160sp"
                        android:layout_height="200sp"
                        android:layout_margin="5sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70sp"
                                android:layout_height="70sp"
                                android:background="@drawable/circle_bakground_yellow"
                                android:padding="10dp"
                                android:src="@drawable/ic_fitness_center_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:gravity="center"
                                android:text="Fitness"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_margin="10sp"
                                android:background="@color/lightGrayLine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:gravity="center"
                                android:text="Check out most popular fitness clubs"
                                android:textColor="@color/lighterBlack"


                                />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="160sp"
                        android:layout_height="200sp"
                        android:layout_margin="5sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70sp"
                                android:layout_height="70sp"
                                android:background="@drawable/circle_background_pink"
                                android:padding="10dp"
                                android:src="@drawable/ic_hotel_bed" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:gravity="center"
                                android:text="Hotels"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_margin="10sp"
                                android:background="@color/lightGrayLine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:gravity="center"
                                android:text="List of best Paris hotelso"
                                android:textColor="@color/lighterBlack"


                                />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="160sp"
                        android:layout_height="200sp"
                        android:layout_margin="5sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70sp"
                                android:layout_height="70sp"
                                android:background="@drawable/circle_bakground_blue"
                                android:padding="10dp"
                                android:src="@drawable/ic_hospital" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:gravity="center"
                                android:text="Hospitals"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_margin="10sp"
                                android:background="@color/lightGrayLine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:gravity="center"
                                android:text="Find nearest hospital"
                                android:textColor="@color/lighterBlack"


                                />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="160sp"
                        android:layout_height="200sp"
                        android:layout_margin="5sp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:padding="10dp"
                                android:src="@drawable/ic_icons8_museum" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:gravity="center"
                                android:text="Places to go"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_margin="10sp"
                                android:background="@color/lightGrayLine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:gravity="center"
                                android:text="Find out numerous cultural activites"
                                android:textColor="@color/lighterBlack"


                                />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>









            </LinearLayout>

        </ScrollView>




</android.support.constraint.ConstraintLayout>